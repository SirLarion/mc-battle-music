{
  "schemaVersion": 1,
  "id": "battle-music",
  "version": "${version}",
  "name": "Battle Music",
  "description": "Battle Music is a Minecraft mod that automatically starts playing appropriate music when entering intensive battle situations or when a battle takes a turn for the worse.",
  "authors": ["Miska Tammenpää <miska@tammenpaa.com>"],
  "contact": {
    "homepage": "https://git.tammenpaa.com/sirlarion",
    "sources": "https://git.tammenpaa.com/sirlarion/mc-battle-music"
  },
  "license": "GPLv3",
  "icon": "assets/battle-music/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "value": "com.sirlarion.battle_music.BattleMusic",
        "adapter": "kotlin"
      }
    ]
  },
  "mixins": ["battle-music.mixins.json"],
  "depends": {
    "fabricloader": ">=0.15.7",
    "minecraft": "~1.20.1",
    "java": ">=17",
    "fabric-api": "*",
    "fabric-language-kotlin": ">=1.9.23"
  },
  "suggests": {
    "another-mod": "*"
  }
}
